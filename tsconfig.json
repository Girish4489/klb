{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@data/*": ["./data/*"],
      "@helpers/*": ["./helpers/*"],
      "@public/*": ["./public/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@components/*": ["./app/components/*"],
      "@context/*": ["./app/context/*"],
      "@dashboard/*": ["./app/dashboard/*"],
      "@printPreview/*": ["./app/print-preview/*"]
    },
    "checkJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.mjs",
    "*.config.mjs",
    "*.config.js",
    "next.config.ts",
    "app/**/*",
    "utils/**/*",
    "dbConfig/**/*",
    "helpers/**/*",
    "models/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
