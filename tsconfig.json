{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@data/*": ["./data/*"],
      "@public/*": ["./public/*"],
      "@models/*": ["./src/models/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@components/*": ["./src/app/components/*"],
      "@constants/*": ["./src/app/constants/*"],
      "@context/*": ["./src/app/context/*"],
      "@dashboard/*": ["./src/app/dashboard/*"],
      "@utils/*": ["./src/app/utils/*"]
    },
    "checkJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.mjs",
    "*.config.mjs",
    "*.config.js",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
